# Database
DATABASE_URL="file:local.db"
# For production (Turso): DATABASE_URL="libsql://your-database-name.turso.io?authToken=your-token"

# Redis
REDIS_URL="redis://localhost:6379"
# For production (Upstash): REDIS_URL="rediss://your-redis-url.upstash.io:6380"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"
OPENAI_DEFAULT_MODEL="gpt-4-turbo-preview"
OPENAI_COMPLETION_TOKEN_LIMIT=4000

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service
GOOGLE_APP_EMAIL="your-email@gmail.com"
GOOGLE_APP_PASSWORD="your-app-password"

# Security
SIGNING_SECRET="your-signing-secret-at-least-32-characters"
TOKEN_SECRET="your-token-secret-at-least-32-characters"

# Environment
ENV="dev"
PORT=5173

# Base URLs
PUBLIC_DEV_BASE_URL="http://localhost:5173"
PUBLIC_PROD_BASE_URL="https://your-app.vercel.app"